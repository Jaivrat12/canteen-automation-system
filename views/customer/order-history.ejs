<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs") %>

    <body>

        <%- include('../partials/appbar.ejs') %>

        <h1 class="heading">ORDER HISTORY</h1>
        <div class="orders">

            <% for( let i = 0; i < orders.length; i++ ) { %>

                <div class="order">

                    <div class="order-row">
                        <div class="order-id bold">
                            Order ID: #<%= orders[i].id %>
                        </div>
                        <% const color = orders[i].status === 'delivered' ? "green" : "red"; %>
                        <div class="status bold <%= color %>">
                            <%= orders[i].status %>
                        </div>
                    </div>

                    <% for( let j = 0; j < orders[i].items.length; j++ ) { %>

                        <div class="item">
                            <img src="<%= orders[i].items[j].image %>" alt="" class="food-img" >
                            <div class="food-info">
                                <div>
                                    <span class="bold"><%= orders[i].items[j].name %></span>
                                    x<%= orders[i].items[j].quantity %>
                                </div>
                                <div class="food-price">
                                    Rs <%= orders[i].items[j].price %>
                                </div>
                            </div>
                            <div class="bold">
                                Rs <%= orders[i].items[j].price * orders[i].items[j].quantity %>
                            </div>
                        </div>

                    <% } %>

                    <hr>

                    <div class="total-price">
                        <span>Total Amount</span>
                        <span>Rs <%= orders[i].total %></span>
                    </div>

                    <span class="bold">Placed At:</span>
                    <%= orders[i].createdAt %>

                </div>

            <% } %>

        </div>

    </body>

</html>