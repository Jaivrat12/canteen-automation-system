<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs") %>

    <body>

        <%- include('../partials/appbar.ejs') %>

        <h1 class="heading">ORDER HISTORY</h1>
        <% for( let i = 0; i < orders.length; i++ ) { %>
            <div class="order">
                <div class="order-row">
                    <div class="order-id">
                        order id: <%= orders[i].id %>
                    </div>
                    <div class="status">
                        status: <%= orders[i].status %>
                    </div>
                </div>

                <% for( let j = 0; j < orders[i].items.length; j++ ) { %>

                    <div class="item">
                        <div>
                            <%= orders[i].items[j].quantity %> x <%= orders[i].items[j].name %>
                        </div>
                        <div>
                            Rs <%= orders[i].items[j].price %>
                        </div>
                    </div>

                <% } %>

                <hr>

                <div class="total-price">
                    total Rs <%= orders[i].total %>
                </div>

                placed at : <%= orders[i].createdAt %>
            </div>

        <% } %>

    </body>

</html>