<!DOCTYPE html>
<html>

    <%- include("../../partials/head.ejs") %>

<body>
    <%- include('../../partials/navbar.ejs') %>

    <h1 class="heading">Update Employee</h1>

    <div class="container">
        <form action="/staff/employees/<%= employee.id %>/edit" method="post" class="update-employee">
            <div class="form-input">
                <label for="name">Name:</label>
                <input type="text" name="name" value="<%= employee.name %>" required>
            </div>

            <br>

            <div class="form-input">
                <label for="email">Email:</label>
                <input type="text" name="email" value="<%= employee.email %>" required>
            </div>

            <br>

            <div class="form-input">
                <label for="password">Password:</label>
                <input type="text" name="password" value="<%= employee.password %>" required>
            </div>

            <br>

            <div class="form-input">
                <label for="phone">Phone:</label>
                <input type="text" name="phone" value="<%= employee.phone %>" required>
            </div>

            <br>

            <div class="form-input">
                <input type="checkbox" name="isAdmin" <%= employee.isAdmin ? "checked" : "" %> required>
                <label for="isAdmin">Has Admin Rights</label>
            </div>

            <br>

            <input type="submit" value="Submit">
        </form>
    </div>

</body>

</html>