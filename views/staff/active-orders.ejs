<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs") %>

    <body>

        <%- include('../partials/navbar.ejs') %>

        <h1 class="heading">ACTIVE ORDERS</h1>

        <div class="orders">

            <% for( let i=0; i < orders.length; i++ ) { %>

                <div class="order">

                    <div class="order-row bold">
                        Placed by: <%= orders[i].customer.name %>
                    </div>

                    <div class="order-row">
                        <div class="order-id bold">
                            Order ID: #<%= orders[i].id %>
                        </div>
                        <div class="status">
                            Status: <%= orders[i].status %>
                        </div>
                    </div>

                    <div class="order-row">
                        <div class="items">
                            <%= orders[i].items %>
                        </div>
                        <div class="total">
                            Total: Rs <%= orders[i].total %>
                        </div>
                    </div>

                    <a href="active-orders/<%= orders[i].id %>" class="details-btn">
                        VIEW DETAILS
                    </a>

                </div>

            <% } %>

        </div>

    </body>

</html>